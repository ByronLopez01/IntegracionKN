@page
@model APIFamilyMaster.Pages.EnviarCacheModel

<div class="container">
    <div class="content">
        <h1>Envío de WaveCache a WaveRelease</h1>

        @if (!string.IsNullOrEmpty(Model.Mensaje))
        {
            <div class="alert @(Model.Mensaje.Contains("Error") ? "alert-danger" : "alert-success")">
                @Model.Mensaje
            </div>
        }

        <form method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary">Enviar Datos a WaveRelease</button>
        </form>
    </div>
</div>

<style>
    body {
        overflow-y: hidden;
        margin: 0;
        padding: 0;
    }

    .navbar {
        display: none;
    }

    .footer{
        display: none;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        flex-direction: column;
    }

    .content {
        text-align: center;
        max-width: 600px;
        width: 100%;
        padding: 60px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        background-color: #f9f9f9;
    }
</style>