@page "/api/WaveRelease/EnviarWave"
@model APIWaveRelease.Pages.EnviarCacheModel


<div class="container">
    <div class="content">
        <h1>Envío de WaveCache a WaveRelease</h1>

        <div id="messageContainer"></div>

        <form method="post" id="myForm">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary" id="submitBtn">
                Enviar Datos a WaveRelease
                <span class="spinner-border spinner-border-sm" style="display: none;"></span>
            </button>
        </form>
    </div>
</div>

<style>
    body {
        overflow-y: hidden;
        margin: 0;
        padding: 0;
    }

    .navbar {
        display: none;
    }

    .footer{
        display: none;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        flex-direction: column;
    }

    .content {
        text-align: center;
        max-width: 600px;
        width: 100%;
        padding: 60px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .spinner-border {
        vertical-align: middle;
        margin-left: 8px;
    }
</style>

<script>
    document.getElementById('myForm').addEventListener('submit', async function(e) {
        e.preventDefault();

        const btn = document.getElementById('submitBtn');
        const spinner = btn.querySelector('.spinner-border');
        const messageContainer = document.getElementById('messageContainer');
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        btn.disabled = true;
        spinner.style.display = 'inline-block';
        messageContainer.innerHTML = '';

        try {
            
            const response = await fetch('/api/WaveRelease/EnviarCache', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': token,
                    'Authorization': 'Basic ' + btoa('senad:S3nad'),
                    'Content-Type': 'application/json'
                }
            });

            let data;
            const contentType = response.headers.get('content-type');

            if (contentType?.includes('application/json')) {
                data = await response.json();
            } else {
                data = { mensaje: await response.text() };
            }

            const alertType = data.mensaje.includes("Error") ? "alert-danger" : "alert-success";
            messageContainer.innerHTML = `
                <div class="alert ${alertType}">
                    ${data.mensaje}
                </div>
            `;

        } catch (error) {
            messageContainer.innerHTML = `
                <div class="alert alert-danger">
                    Error de conexión: ${error.message}
                </div>
            `;
        } finally {
            btn.disabled = false;
            spinner.style.display = 'none';
        }
    });
</script>