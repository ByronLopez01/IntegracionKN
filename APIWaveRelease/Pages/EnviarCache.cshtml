@page "/EnviarCache"
@model APIWaveRelease.Pages.EnviarCacheModel


<div class="container">
    <div class="content">
        <h1>Envío de WaveCache a WaveRelease</h1>

        <div id="messageContainer"></div>

        <form method="post" id="myForm">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-primary" id="submitBtn">
                Enviar Datos a WaveRelease
                <span class="spinner-border spinner-border-sm" style="display: none;"></span>
            </button>
        </form>
    </div>
</div>

<style>
    body {
        overflow-y: hidden;
        margin: 0;
        padding: 0;
    }

    .navbar {
        display: none;
    }

    .footer{
        display: none;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        flex-direction: column;
    }

    .content {
        text-align: center;
        max-width: 600px;
        width: 100%;
        padding: 60px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .spinner-border {
        vertical-align: middle;
        margin-left: 8px;
    }
</style>

<script>
    document.getElementById('myForm').addEventListener('submit', async function(e) {
        // Detener envío normal del formulario
        e.preventDefault();

        // Obtener referencias a elementos
        const btn = document.getElementById('submitBtn');
        const spinner = btn.querySelector('.spinner-border');
        const messageContainer = document.getElementById('messageContainer');

        // Desactivar botón y mostrar spinner
        btn.disabled = true;
        spinner.style.display = 'inline-block';

        // Limpiar mensajes anteriores
        messageContainer.innerHTML = '';

        try {
            // Crear FormData y agregar token antifalsificación
            const formData = new FormData(this);

            // Enviar solicitud POST
        const response = await fetch('http://localhost:5000/api/WaveRelease/EnviarCache', {
            method: 'POST',
            headers: {
                'Authorization': 'Basic ' + btoa('senad:S3nad')
            }
        });

            // Leer respuesta JSON
            const data = await response.json();

            // Mostrar mensaje dinámicamente
            const alertType = data.mensaje.includes("Error") ? "alert-danger" : "alert-success";
            messageContainer.innerHTML = `
                <div class="alert ${alertType}">
                    ${data.mensaje}
                </div>
            `;

        } catch (error) {
            messageContainer.innerHTML = `
                <div class="alert alert-danger">
                    ${error.message}
                </div>
            `;
        } finally {
            btn.disabled = false;
            spinner.style.display = 'none';
        }
    });
</script>   